{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
    "@src": ["src"],
    "@database": ["src/database"],
    "@crawl": ["src/crawl"],
    "@utils": ["src/utils"],
    "@models": ["src/models"],
    "@server": ["src/server"],
    "@test": ["test"],
    "@parse": ["src/parse"],
    "@config": ["config"]


    },
    "outDir": "dist",
    "allowJs": true,          // JS 파일도 포함
    "checkJs": false,         // JS는 타입 검사 안 함 (필요하면 true로)
    "esModuleInterop": true,
    "strict": true,           // TS 파일은 엄격한 타입 검사
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true                                 /* Skip type checking all .d.ts files. */
  },
   "include": [
    "src/**/*"                                // src 디렉토리의 모든 파일만 포함
  ],
}
