{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,          // JS 파일도 포함
    "checkJs": false,         // JS는 타입 검사 안 함 (필요하면 true로)
    "esModuleInterop": true,
    "strict": true,           // TS 파일은 엄격한 타입 검사
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true                                 /* Skip type checking all .d.ts files. */
  }
}
